# Financial Metrics Extraction Evaluation Framework
# Environment Configuration Template
# 
# Copy this file to .env and fill in your values:
#   cp .env.template .env

# =============================================================================
# AZURE AI FOUNDRY CONFIGURATION
# =============================================================================

# Azure AI Foundry Project Endpoint (required for agent framework)
# Format: https://<your-project>.services.ai.azure.com/api/projects/<project-id>
# Get this from: Azure Portal -> AI Foundry -> Your Project -> Overview
AZURE_AI_PROJECT_ENDPOINT=

# Model deployment name in AI Foundry
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o

# =============================================================================
# AZURE OPENAI CONFIGURATION (for evaluation SDK)
# =============================================================================

# Azure OpenAI endpoint (required for evaluators)
# Format: https://<your-resource>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=

# Azure OpenAI API key
AZURE_OPENAI_API_KEY=

# Deployment name for evaluation (typically same model as above)
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# API version
AZURE_API_VERSION=2024-12-01-preview

# =============================================================================
# EVALUATION THRESHOLDS
# =============================================================================

# Minimum scores to pass (scale: 0-5)
NUMERICAL_ACCURACY_THRESHOLD=3.5
COMPLETENESS_THRESHOLD=4.0
CONSISTENCY_THRESHOLD=3.0
GROUNDEDNESS_THRESHOLD=3.5

# Overall confidence threshold for SME routing (scale: 0-1)
CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# APPLICATION INSIGHTS (Online Evaluation)
# =============================================================================

# Enable Application Insights telemetry
ENABLE_APP_INSIGHTS=true

# Application Insights connection string
# Get this from: Azure Portal -> Application Insights -> Overview -> Connection String
APPLICATIONINSIGHTS_CONNECTION_STRING=

# =============================================================================
# SME REVIEW QUEUE (Azure Service Bus)
# =============================================================================

# Enable SME review queue
ENABLE_SME_QUEUE=false

# Service Bus connection string
# Get this from: Azure Portal -> Service Bus -> Shared Access Policies
SME_QUEUE_CONNECTION_STRING=

# Queue name for SME review requests
SME_QUEUE_NAME=sme-review-queue

# =============================================================================
# DATA PATHS
# =============================================================================

# Path to golden dataset file
GOLDEN_DATASET_PATH=data/golden_dataset.json

# Directory for evaluation results
RESULTS_OUTPUT_PATH=results/

# =============================================================================
# AUTHENTICATION
# =============================================================================

# The framework uses DefaultAzureCredential which automatically tries:
# 1. Environment variables (AZURE_CLIENT_ID, AZURE_TENANT_ID, AZURE_CLIENT_SECRET)
# 2. Managed Identity (when deployed to Azure)
# 3. Azure CLI credentials (az login)
# 4. Visual Studio Code credentials
# 5. Azure PowerShell credentials

# Optional: Service Principal credentials (for CI/CD or production)
# AZURE_TENANT_ID=
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
